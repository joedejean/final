<div class="col-md-offset-1">
<div class="page-header">
  <h1>Add a New Expense</h1>
</div>

<div class="row">
  <div class="col-md-5">

    <%= form_tag "/expenses", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "title", "What would you like to name the expense?" %>
        <%= text_field_tag "title", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "totalamount", "Total $ Amount (Round to Nearest Dollar):" %>
        <%= text_field_tag "totalamount", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "date", "Date:" %>
        <%= text_field_tag "date", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "notes", "Notes:" %>
        <%= text_field_tag "notes", "", "class" => "form-control" %>
      </div>

        <p><i>Note: Don't forget to add new borrowers to this expense! After clicking the "add" button below, navigate to the borrowers page to add amounts outstanding.</i></p>

      <%= submit_tag "Add This Expense", "class" => "btn btn-primary btn-success" %> or <%= link_to "Cancel", "/expenses" %>

    </form>
</div>
</div>
</div>
