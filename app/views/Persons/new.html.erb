<div class="col-md-offset-1">
<div class="page-header">
  <h1>Add a New Individual</h1>
</div>

<div class="row">
  <div class="col-md-5">


    <%= form_tag "/persons", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "name", "What's the person's name?" %>
        <%= text_field_tag "name", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "email", "E-mail address:" %>
        <%= text_field_tag "email", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "notes", "Any notes?" %>
        <%= text_field_tag "notes", "", "class" => "form-control" %>
      </div>

    <%= submit_tag "Add This Individual", "class" => "btn btn-primary btn-success" %> or <%= link_to "Cancel", "/borrowers" %>

    </form>
</div>
</div>
</div>
